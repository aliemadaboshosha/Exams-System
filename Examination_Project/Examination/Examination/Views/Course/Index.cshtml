@model List<Course>
@{
    ViewData["Title"] = "Index";
}

<h1>Courses</h1>
<a href="/Course/Create" class="btn btn-info mt-2 mb-2" style="text-align:left">Create Topic</a>
<div style="text-align:center">

    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Id</td>
                    <td>@course.Name</td>
                    <td><a asp-action="Details" asp-controller="course" asp-route-id="@course.Id">Show</a></td>
                    <td><a asp-action="Update" asp-controller="course" asp-route-id="@course.Id">Edit</a></td>
                    <td>
                        <a asp-controller="course" asp-action="Delete" asp-route-id="@course.Id"
                           onclick="return confirm('Are you sure you want to delete this course?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

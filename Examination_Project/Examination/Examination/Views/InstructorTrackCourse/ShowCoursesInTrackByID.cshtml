@model List<InstructorTrackCourse>
@{
    ViewData["Title"] = "ShowCoursesInTrackByID";
}

<h1> Courses In Track : <span style="color:blueviolet">@Model[0].Track.Name</span> </h1>

<div style="text-align:center">
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Course Name</th>
                <th>Instructor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Course.Name</td>
                    <td>@item.Instructor.Fname</td
                </tr>
            }

        </tbody>
    </table>
    <a class="btn btn-info mt-2 w-25" href="/Track/Index">Back</a>

</div>
